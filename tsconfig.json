{
    "compilerOptions": {
      "target": "ES2022",             
      "module": "CommonJS",            
      "outDir": "./dist",              
      "rootDir": "./src",              
      "strict": true,                  
      "esModuleInterop": true,         
      "experimentalDecorators": true,  
      "emitDecoratorMetadata": true,   
      "skipLibCheck": true,            
      "forceConsistentCasingInFileNames": true 
    },
    "include": ["src"]
  }
  